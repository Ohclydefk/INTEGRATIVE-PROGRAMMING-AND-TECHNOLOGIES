@model List<DoctorModel>

<div class="content">
    <div class="row">
        <div class="col-sm-4 col-3">
            <h4 class="page-title">Doctors</h4>
        </div>
        <div class="col-sm-8 col-9 text-right m-b-20">
            <a asp-controller="Admin" asp-action="AddDoctorsPage" class="btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Add Doctor</a>
        </div>
    </div>
    @if (Model.Any())
    {
        <div class="row doctor-grid">
            @foreach (var doctor in Model)
            {
                <div class="col-md-4 col-sm-4 col-lg-3">
                    <div class="profile-widget">
                        <div class="doctor-img avatar">
                            <a href="#"><img alt="" src="~/uploaded_images/@doctor.ImageFileName"></a>
                        </div>
                        <div class="dropdown profile-action">
                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a asp-controller="Admin" asp-action="EditDoctor" asp-route-id="@doctor.DoctorId" class="dropdown-item"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                            </div>
                        </div>
                        <h4 class="doctor-name text-ellipsis"><a href="profile.html">@doctor.FirstName @doctor.LastName</a></h4>
                        <div class="doc-prof">@doctor.Department</div>
                        <div class="user-contact-info">
                            <i class="fa fa-envelope fw-bold"></i> @doctor.Email
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-sm-12">
                <p>No Doctors available.</p>
            </div>
        </div>
    }
</div>
